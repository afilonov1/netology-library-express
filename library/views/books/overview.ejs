<%- include("../helpers/layout-start") %>
    <h1>Книга <%= book.title %></h1>
    <div class="mb-3">
        <label class="form-label">
            title
            <input type="text" name="title" class="form-control"
                disabled value=<%= book.title %>
            >
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">
            description
            <input type="text" name="description" class="form-control"
                disabled value=<%= book.description %>
            >
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">
            authors
            <input type="text" name="authors" class="form-control"
                disabled value=<%= book.authors %>
            >
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">
            favorite
            <input type="text" name="favorite" class="form-control"
                disabled value=<%= book.favorite %>
            >
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">
            fileCover
            <input type="text" name="fileCover" class="form-control"
                disabled value=<%= book.fileCover %>
            >
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">
            fileName
            <input type="text" name="fileName" class="form-control"
                disabled value=<%= book.fileName %>
            >
        </label>
    </div>

    <div class="mb-3">
        <label class="form-label">
            View count
            <input type="text" name="fileBook" class="form-control"
                disabled value=<%= viewCount %>
            >
        </label>
    </div>

    
<%- include("../helpers/layout-end") %>
<div class="container">

    <div class="row">
        <div class="col-4">
            <div id="list" class="list-group">

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label for="username">username</label>
                <input
                        placeholder="username"
                        type="text"
                        id="username"
                        class="form-control"
                >
            </div>
            <div class="form-group">
                <label for="text">message</label>
                <textarea
                        placeholder="message"
                        class="form-control"
                        id="text"
                ></textarea>
            </div>
            <button type="submit" id="send-all" class="btn btn-primary">all</button>
            <button type="submit" id="send-me" class="btn btn-primary">me</button>
            <button type="submit" id="send-room" class="btn btn-primary">room</button>
        </div>
    </div>

</div>
<script src="https://cdn.socket.io/3.1.1/socket.io.min.js"></script>

<script >
    const roomName = location.pathname.split('/').pop();
    const socket = io.connect('/', {query: `roomName=${roomName}`});
    
    const boxList       = document.querySelector('#list');
    const inputUsername = document.querySelector('#username');
    const inputText     = document.querySelector('#text');
    const sendAll       = document.querySelector('#send-all');
    const sendMe        = document.querySelector('#send-me');
    const sendRoom      = document.querySelector('#send-room');

    const getTmp = (msg) => {
        return `
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <small>${msg.username}</small>
                        <small class="text-muted">${msg.type}</small>
                    </div>
                    <p class="mb-1">${msg.text}</p>
                </div>
        `;
    };

    socket.on('message-to-room', (msg) => {
        const div = getTmp(msg)
        boxList.insertAdjacentHTML('beforeend', div)
    });

    sendRoom.addEventListener('click', () => {
        socket.emit('message-to-room', {
            username: inputUsername.value,
            text: inputText.value,
        })
    })


</script>
